{{#if hasContent}}
<h1 class="mt-5 mb-5">Books starting with "{{letter}}"</h1>
    
{{#each resultOfLetter}}
<div class="row">
  <div class="col-1 mb-4">
    <a href="/details/{{this.book_id}}">
      <img src="{{this.image_url}}" alt="{{this.title}}" width="60">
    </a>
  </div>
  <div class="col-11 mt-3">
    <p>
      <a href="/details/{{this.book_id}}">{{this.title}}</a>
    </p>
  </div>
</div>
{{/each}}
     

<div class="d-flex justify-content-start">
  {{#if hasPrevPage}}
  <form method="GET" action="/letter{{letter}}/page{{prevPage}}">
    <button class="btn btn-primary mr-4 mb-5">◀️ Previous</button>
  </form>
  {{/if}}

  {{#if hasNextPage}}
  <form method="GET" action="/letter{{letter}}/page{{nextPage}}">
    <button class="btn btn-success mb-5">Next ▶️</button>
  </form>
  {{/if}}
</div>

{{else}}
<h1 class="text-center mt-5 mb-5">Sorry, there are no books 📖 starting with "{{letter}}"</h1>
{{/if}} 