{{#each bookDetail}}
  <div class="row">
    <div class="col-md-4">
      <img src="{{this.image_url}}" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
        <h5>{{this.title}}</h5>
        <p>Rating: {{this.rating}} ({{this.rating_count}})</p>
        <p>Pages: {{this.pages}}</p>
        <p>{{this.description}}</p>
    </div>
  </div>
{{/each}}

<h3>Extra Info</h3>
<p>Author(s): {{authors}}</p>
<p>Genres: {{genres}}</p>
<a href="/review/{{title}}/{{authors}}">Find Review</a>
